{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
